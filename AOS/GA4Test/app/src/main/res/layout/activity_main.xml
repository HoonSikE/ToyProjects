<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:layout_marginHorizontal="16dp"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_screenview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                >
                <TextView
                    android:id="@+id/text_screenview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="- 스크린뷰"
                    />
                <TextView
                    android:id="@+id/btn_screen_view"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    app:layout_constraintTop_toBottomOf="@+id/text_screenview"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="스크린뷰"
                    android:background="@color/blue"
                    android:textColor="@color/white"
                    android:textFontWeight="600"
                    android:gravity="center"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/layout_screenview"
                app:layout_constraintStart_toStartOf="parent"
                >
                <TextView
                    android:id="@+id/text_event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="- 이벤트"
                    />
                
                <TextView
                    android:id="@+id/btn_click_event"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    app:layout_constraintTop_toBottomOf="@+id/text_event"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="클릭 이벤트"
                    android:background="@color/blue"
                    android:textColor="@color/white"
                    android:textFontWeight="600"
                    android:gravity="center"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_ecommerce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/layout_event"
                app:layout_constraintStart_toStartOf="parent"
                >
                <TextView
                    android:id="@+id/text_ecommerce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="- 전자 상거래"
                    />

                <TextView
                    android:id="@+id/btn_view_item_list"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    app:layout_constraintTop_toBottomOf="@+id/text_ecommerce"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="ViewItemList"
                    android:background="@color/blue"
                    android:textColor="@color/white"
                    android:textFontWeight="600"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/btn_select_item"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    app:layout_constraintTop_toBottomOf="@+id/text_ecommerce"
                    app:layout_constraintStart_toEndOf="@+id/btn_view_item_list"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="SelectItem"
                    android:background="@color/blue"
                    android:textColor="@color/white"
                    android:textFontWeight="600"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/btn_view_item"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    app:layout_constraintTop_toBottomOf="@+id/btn_view_item_list"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="ViewItem"
                    android:background="@color/blue"
                    android:textColor="@color/white"
                    android:textFontWeight="600"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/btn_add_to_wishlist"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    app:layout_constraintTop_toBottomOf="@+id/btn_view_item_list"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toEndOf="@+id/btn_view_item"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="AddToWishlist"
                    android:background="@color/blue"
                    android:textColor="@color/white"
                    android:textFontWeight="600"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/btn_add_to_cart"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    app:layout_constraintTop_toBottomOf="@+id/btn_view_item"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="AddToCart"
                    android:background="@color/blue"
                    android:textColor="@color/white"
                    android:textFontWeight="600"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/btn_view_cart"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    app:layout_constraintTop_toBottomOf="@+id/btn_view_item"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toEndOf="@+id/btn_add_to_cart"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="ViewCart"
                    android:background="@color/blue"
                    android:textColor="@color/white"
                    android:textFontWeight="600"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/btn_remove_from_cart"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    app:layout_constraintTop_toBottomOf="@+id/btn_add_to_cart"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="RemoveFromCart"
                    android:background="@color/blue"
                    android:textColor="@color/white"
                    android:textFontWeight="600"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/btn_begin_checkout"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    app:layout_constraintTop_toBottomOf="@+id/btn_add_to_cart"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toEndOf="@+id/btn_remove_from_cart"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="BeginCheckout"
                    android:background="@color/blue"
                    android:textColor="@color/white"
                    android:textFontWeight="600"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/btn_add_shipping_info"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    app:layout_constraintTop_toBottomOf="@+id/btn_remove_from_cart"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="AddShippingInfo"
                    android:background="@color/blue"
                    android:textColor="@color/white"
                    android:textFontWeight="600"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/btn_add_payment_info"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    app:layout_constraintTop_toBottomOf="@+id/btn_remove_from_cart"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toEndOf="@+id/btn_add_shipping_info"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="AddPaymentInfo"
                    android:background="@color/blue"
                    android:textColor="@color/white"
                    android:textFontWeight="600"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/btn_purchase"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    app:layout_constraintTop_toBottomOf="@+id/btn_add_shipping_info"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="Purchase"
                    android:background="@color/blue"
                    android:textColor="@color/white"
                    android:textFontWeight="600"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/btn_refund"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    app:layout_constraintTop_toBottomOf="@+id/btn_add_shipping_info"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toEndOf="@+id/btn_purchase"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="Refund"
                    android:background="@color/blue"
                    android:textColor="@color/white"
                    android:textFontWeight="600"
                    android:gravity="center"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>